<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation.xml"
    app:startDestination="@id/homeFragment">

    <action
        android:id="@+id/navigation_global_to_AuthFragment"
        app:popUpTo="@id/mobile_navigation.xml"
        app:popUpToInclusive="true"
        app:destination="@id/authFragment"/>

    <action
        android:id="@+id/navigation_global_to_HomeFragment"
        app:popUpTo="@id/mobile_navigation.xml"
        app:popUpToInclusive="true"
        app:destination="@id/homeFragment"/>

    <fragment
        android:id="@+id/authFragment"
        android:name="com.lawlett.mafia.ui.auth.AuthFragment"
        android:label="Authentication"
        tools:layout="@layout/auth_fragment" />

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.lawlett.mafia.ui.home.HomeFragment"
        android:label="home_fragment"
        tools:layout="@layout/home_fragment" />

</navigation>
